        <servlet-class>controller.MobileController.MobileAddController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MobileSearchController</servlet-name>
        <servlet-class>controller.MobileController.MobileSearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MobileDeleteController</servlet-name>
