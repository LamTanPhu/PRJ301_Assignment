    <servlet-mapping>
        <servlet-name>MobileAddController</servlet-name>
        <url-pattern>/MobileAddController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
